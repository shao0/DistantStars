<UserControl
    x:Class="DistantStars.Client.Resource.Controls.LoadingUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:DistantStars.Client.Resource.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Background="#7F000000">
        <Label
            Margin="0,-50,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=controls:LoadingUserControl}, Path=Message}"
            FontSize="20"
            Foreground="White" />
        <StackPanel
            Name="LoadingPanel"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal" />
    </Grid>
</UserControl>
